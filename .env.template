# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# Database Connections
# ============================================================================

# MySQL
DB_MYSQL_URI=mysql+pymysql://root:YOUR_PASSWORD@127.0.0.1:3306/akomi

# MSSQL
DB_MSSQL_URI=mssql+pyodbc://sa:YOUR_PASSWORD@127.0.0.1:1433/master?driver=ODBC+Driver+17+for+SQL+Server

# PostgreSQL
DB_POSTGRE_URI=postgresql+psycopg2://postgres:YOUR_PASSWORD@127.0.0.1:5432/akomi

# Oracle
DB_ORACLE_URI=oracle+oracledb://akomi:YOUR_PASSWORD@localhost:1521/?service_name=XEPDB1

# SQLite (no password needed)
DB_SQLITE_URI=sqlite:///opflow.db

# Active Server (mysql|mssql|postgre|oracle|sqlite)
ACTIVE_SERVER=oracle

# ============================================================================
# Telegram Bot Configuration
# ============================================================================

# Telegram Bot Token - Get from @BotFather
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# Telegram Media Directory
TELEGRAM_MEDIA_DIR=telegram_media

# Polling Interval (seconds)
TELEGRAM_POLLING_INTERVAL=5

# Table Name for Telegram Messages
TELEGRAM_TABLE_NAME=TRANSPORT_TELEGRAM

# ============================================================================
# Logging Configuration
# ============================================================================

LOGGING_ENABLED=true
LOGGING_DIR=log
LOGGING_MAX_REPR_LEN=2000
LOGGING_BUCKET_MINUTES=10

# ============================================================================
# Schema Configuration
# ============================================================================

SCHEMA_ENABLED=true
SCHEMA_DIR=schema

# ============================================================================
# CSV Configuration
# ============================================================================

CSV_DIR=csv
